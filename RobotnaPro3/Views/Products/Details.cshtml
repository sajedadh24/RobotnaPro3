@model Product  
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<table class="table-bordered">
    <tr>
        <td><label asp-for="ProductId"></label></td>
        <td>@Model.ProductId</td>
    </tr>
    <tr>
        <td><label asp-for="price"></label></td>
        <td>@Model.price</td>
    </tr>
    <tr>
        <td><label asp-for="ProductName"></label></td>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <td><label asp-for="creationDate"></label></td>
        <td>@Model.creationDate</td>
    </tr>
</table>

