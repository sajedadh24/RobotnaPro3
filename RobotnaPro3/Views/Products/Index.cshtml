@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="GreatProduct" class="btn btn-outline-primary">  Great New Product</a>
<table class="table table-bordered table-hover">
    <tr>
        <th>@Html.DisplayNameFor(x=>x.ProductName)</th>
        <th>@Html.DisplayNameFor(x=>x.price)</th>
        <th> operations</th>
    </tr>
    @foreach (var item in Model)
    { <tr>
    <td>@item.ProductName</td>
    <td>@item.price</td>
    <td>

        <a asp-action="Details" asp-controller="Products" asp-route-id="@item.ProductId"
           class="btn btn-outline-dark">More Details</a>
        <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.ProductId"
           class="btn btn-outline-warning">Edit</a>
        <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.ProductId"
           class="btn btn-outline-danger">Delete</a>
    </td>
</tr>
    }
</table>

