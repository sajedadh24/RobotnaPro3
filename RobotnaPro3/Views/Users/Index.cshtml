@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="CreatUser"class="btn btn-outline-danger">Creat User </a>
<table class=" table table-bordered table-hover">
    <tr>
        <th>@Html.DisplayNameFor(x => x.UserName)</th>
        <th>@Html.DisplayNameFor(x => x.Gender)</th>
        <th> Opertions</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.Gender</td>
            <td>
                <a asp-action="Details" asp-controller="User" asp-route-id="@item.UserId"
                   class="btn btn-outline-dark">More Details</a>
                <a asp-action="Edit" asp-controller="User" asp-route-id="@item.UserId"
                   class="btn btn-outline-warning">Edit</a>
                <a asp-action="Delete" asp-controller="User" asp-route-id="@item.UserId"
                   class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}



</table>

